// Code 


#include <LiquidCrystal.h>
#include <SoftwareSerial.h>
LiquidCrystal lcd(13,12,11,10,9,8);
SoftwareSerial BTSerial(18,19);//rx,tx
const int g1 = 2;
const int g2 = 3;
const int g3 = 4;
const int g4 = 5;
const int buzzer = 7;
void setup()
{
BTSerial.begin(9600);
pinMode(g1, INPUT_PULLUP);
pinMode(g2, INPUT_PULLUP);
pinMode(g3, INPUT_PULLUP);
pinMode(g4, INPUT_PULLUP);
pinMode(buzzer,OUTPUT);
BTSerial.begin(9600);
BTSerial.println("Hand Gestures Monitoring");
Buzzer();
lcd.begin(16, 2); 
lcd.print(" HandGestures ");
lcd.setCursor(0, 1);
lcd.print(" Monitoring Sys "); // if(digitalRead(Slot1)==LOW)..Reading Input
delay(3000);
lcd.clear();
}
void loop()
{
if(digitalRead(g1)==HIGH && digitalRead(g2)==LOW && digitalRead(g3)==LOW && 
digitalRead(g4)==LOW )
{
lcd.setCursor(0,0);
lcd.print("WELCOME ");
lcd.setCursor(0, 1);
lcd.println("I NEED WATER ");
BTSerial.println("I NEED WATER ");
//delay(1000);
44
Buzzer();
}
else if(digitalRead(g1)==LOW && digitalRead(g2)==HIGH && digitalRead(g3)==LOW && 
digitalRead(g4)==LOW )
{
lcd.setCursor(0,0);
lcd.print("WELCOME ");
lcd.setCursor(0, 1);
lcd.print("I NEED TABLETS ");
BTSerial.println("I NEED TABLETS");
Buzzer();
}
else if(digitalRead(g1)==LOW && digitalRead(g2)==LOW && digitalRead(g3)==HIGH && 
